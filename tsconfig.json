{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*", "node_modules/@types/*"]
    },
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
